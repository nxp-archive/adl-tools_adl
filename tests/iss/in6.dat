MD n=Mem ra=0x0000000c d=0x90640000	# stw r3,0(r4)

MD n=Mem ra=0x00020010 d=0x7D5A02A6	# mfspr r10,SRR0
MD n=Mem ra=0x00020014 d=0x394A0004	# addi r10,r10,4
MD n=Mem ra=0x00020018 d=0x7D5A03A6	# mtspr SRR0,r10
MD n=Mem ra=0x0002001c d=0x39603000	# li r11,0x3000
MD n=Mem ra=0x00020020 d=0x3D801234	# lis r12,0x1234
MD n=Mem ra=0x00020024 d=0x398C5678	# la r12,0x5678(r12)
MD n=Mem ra=0x00020028 d=0x918B0100	# stw r12,0x100(r11)
MD n=Mem ra=0x0002002c d=0x4C000064	# rfi
# </GEN>

MD n=Mem ra=0x1000 d=0x00000000
