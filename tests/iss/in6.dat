#
# Tests to make sure that an exception can be taken.
#
= asm

     lwz  r2,0x1000(0)
     add r3,r2,r1
     mtspr 20,r3
     stw  r3,0(r4)

     mfspr r10,SRR0
     addi r10,r10,4
     mtspr SRR0,r10
     li r11,0x3000
     lis r12,0x1234
     la  r12,0x5678(r12)
     stw r12,0x100(r11)
     rfi

= /asm

# <GEN>
MD n=Mem ra=0x00000000 d=0x80401000	# lwz r2,0x1000(0)
MD n=Mem ra=0x00000004 d=0x7C620A14	# add r3,r2,r1
