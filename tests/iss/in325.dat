# Test mixed-width encodings for little-endian.

= asm

	c.addi4spn a0,sp,0x1fc
	addi a0,a0,10
	c.lw a1,0(a0)
	c.sw a1,4(a0)

= /asm

= mdopts
endian: little
= /mdopts

# <GEN>
MD n=Mem ra=0x00000000 d=0x1BE8 s=2	#	c.addi4spn a0,sp,0x1fc
MD n=Mem ra=0x00000002 d=0x00A50513	#	addi a0,a0,10
MD n=Mem ra=0x00000006 d=0x410C s=2	#	c.lw a1,0(a0)
MD n=Mem ra=0x00000008 d=0xC14C s=2	#	c.sw a1,4(a0)
# </GEN>

CORE n=:rv

RD n=GPR i=2 d=0xdfa

MD n=Mem ra=0x1000 d=0xdeadbeef
MD n=Mem ra=0x1004 d=0

RESULTS

RD n=GPR i=10 d=0x1000
RD n=GPR i=11 d=0xdeadbeef

MD n=Mem ra=0x1000 d=0xdeadbeef
MD n=Mem ra=0x1004 d=0xdeadbeef
