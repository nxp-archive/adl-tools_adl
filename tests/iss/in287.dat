#
# An inifinite loop formed via an rfi, with no intervening exceptions- this
# should exit due to the td api when run using the decode cache.
#
= asm

	addi r1,r1,1
	addi r2,r2,2
	addi r3,r3,3
	addi r4,r4,4
	rfi

= /asm

#
# <GEN>
MD n=Mem ra=0x00000000 d=0x38210001	#	addi r1,r1,1
MD n=Mem ra=0x00000004 d=0x38420002	#	addi r2,r2,2
MD n=Mem ra=0x00000008 d=0x38630003	#	addi r3,r3,3
MD n=Mem ra=0x0000000c d=0x38840004	#	addi r4,r4,4
MD n=Mem ra=0x00000010 d=0x4C000064	#	rfi
# </GEN>

CORE n=:P

RD n=NIA   d=0x00
RD n=SRR0  d=0x04

RESULTS

RD n=GPR i=1 d=1
RD n=GPR i=2 d=50
RD n=GPR i=3 d=75
RD n=GPR i=4 d=100
